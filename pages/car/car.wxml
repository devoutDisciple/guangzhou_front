<view class="car">
	<scroll-view scroll-y class='car_content'>
		<van-row custom-class="car_content_list" wx:for="{{data}}" wx:key="{{index}}">
			<van-col custom-class="car_content_list_radio">
				<!-- <radio-group class="radio-group" bindchange="radioChange" data-data="{{index}}">
					<radio bindtap="radioChange" data-data="{{index}}" value="first" checked="{{radioSelect.indexOf(index) > -1 ? true : false}}" color="#f72728"/>
				</radio-group> -->
				<!-- <van-radio-group value="{{ item.select ? 1 : null }}" bind:change="radioChange"  data-data="{{item}}">
					<van-radio name="{{1}}" />
				</van-radio-group> -->
				<radio bindtap="radioChange" data-data="{{item}}" checked="{{item.select ? true : false}}" color="#f72728"/>
			</van-col>
			<van-col custom-class="car_content_list_img">
				<image src="/asserts/imgs/goods3.jpeg" />
			</van-col>
			<van-col custom-class="car_content_list_intro">
				<van-row custom-class="car_content_list_intro_title">开发了倒计时了附近的说法房间里的设计费类似的风口浪尖第三方了</van-row>
				<van-row custom-class="car_content_list_intro_price">￥89</van-row>
				<van-row custom-class="car_content_list_intro_num">
					<van-col custom-class="car_content_list_intro_num_btn car_content_list_intro_num_btn_first">-</van-col>
					<van-col custom-class="car_content_list_intro_num_center">10</van-col>
					<van-col custom-class="car_content_list_intro_num_btn car_content_list_intro_num_btn_second">+</van-col>
				</van-row>
			</van-col>
		</van-row>
		<!-- 3d3d3d 00bd3e -->
	</scroll-view>
	<view class="car_footer">
		<van-submit-bar
			price="{{ 3050 }}"
			button-text="结算"
			bind:submit="onSubmitOrder">
			<radio class="car_footer_radio" bindtap="allSelectChange" checked="{{allSelect ? true : false}}" color="#f72728"/>全选
			</van-submit-bar>
	</view>
</view>
