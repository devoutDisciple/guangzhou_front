.goods{
	width: 100vw;
	height: 100vh;
	font-size: 14px;
	color: #333;
}
.goods_tab{
	height: 44px;
}
.goods_content{
	height: calc(100vh - 44px);
	width: 100vw;
}
.goods_content_item{
    width: 50vw;
    min-height: 100px;
    border: 1px solid #eeeeee;
}
.goods_content_item_img image{
    width: 100%;
}
.goods_content_item_name{
    line-height: 20px;
    height: 60px;
    margin: 10px;
    margin-top: 0;
    margin-bottom: 0;
    overflow: hidden;
}
.goods_content_item_price{
    margin-left: 10px;
    color: red;
    font-size: 16px;
}
