<view class="collection">
	<scroll-view
    scroll-y
	class="collection_content">
		<van-row custom-class="collection_content_list" bindtap="onSearchGoodsDetail" data-data="{{item}}" wx:for="{{data}}" wx:key="{{index}}">
			<van-col custom-class="collection_content_list_img">
				<image src="{{item.goodsDetail.url}}" />
			</van-col>
			<van-col custom-class="collection_content_list_intro">
				<van-row custom-class="collection_content_list_intro_title">{{item.goodsDetail.name}}</van-row>
				<van-row custom-class="collection_content_list_intro_price">ï¿¥{{item.goodsDetail.price}}</van-row>
			</van-col>
		</van-row>
	</scroll-view>
</view>
