.collection{
	height: 100vh;
	width: 100vw;
	overflow: hidden;
	font-size: 12px;
	color: #333;
}
.collection_content{
	height: 100vh;
	width: calc(100vw - 20px);
	margin-left: 10px;
}
.collection_content_list{
	height: 80px;
	padding: 10px 0;
}
.collection_content_list_img{
	width: 80px;
	height: 100%;
}
.collection_content_list_img image{
	width: 80px;
	height: 80px;
}
.collection_content_list_intro{
	margin-left: 10px;
	width: calc(100vw - 110px);
	height: 100%;
}
.collection_content_list_intro_title{
	height: 60px;
	width: 100%;
	line-height: 20px;
}
.collection_content_list_intro_price{
	height: 20px;
	width: 100%;
	line-height: 20px;
	color: red;
}
