/* pages/home/home.wxss */
.home {
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    color: #333;
    font-size: 14px;
}

.home_header {
    height: 80px;
}

.home_header_location {
    padding-left: 10px;
}

.home_header_location_text {
    font-size: 14px;
    color: #333;
}

.home_header_location_icon {
    margin-left: 10px;
    margin-top: 0px;
}

.home_content {
    height: calc(100vh - 80px);
    width: 100vw;
}

/* .home_content_swiper {
    padding: 0 10px;
} */

.home_content_swiper image {
    width: 100%;
    height: 100%;
}

/* 今日推荐 */
.home_content_today {
    height: 40px;
    line-height: 40px;
    text-align: center;
    width: 100vw;
}

.home_content_today_line {
    display: inline-block;
    margin-top: 20px;
    height: 0px;
    width: 50px;
    border: 1px solid #ccc;
}
.home_content_today_line_first{
    margin-left: calc((100vw - 220px) / 2);
}

.home_content_today_text {
    width: 100px;
    display: inline-block;
    margin: 0 10px;
    font-size: 18px;
    color: #333;
}
.goods_today{
    min-height: 100px;
    width: 100vw;
}
.goods_item{
    width: 50vw;
    min-height: 100px;
    border: 1px solid #eeeeee;
    /* border-top: none; */
    /* border-left: none; */
}
.goods_item_img image{
    width: 100%;
}
.goods_item_name{
    line-height: 20px;
    height: 60px;
    margin: 10px;
    margin-top: 0;
    margin-bottom: 0;
    overflow: hidden;
}
.goods_item_price{
    margin-left: 10px;
    color: red;
    font-size: 16px;
}
.home_content_shop{
    width: 100vw;
    min-height: 40px;
    line-height: 40px;
    font-size: 14px;
}
