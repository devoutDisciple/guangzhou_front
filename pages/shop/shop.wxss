/* pages/shop/shop.wxss */
.shop{
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    font-size: 14px;
    color: #333;
    background: #fff;
}
.shop_content{
	height: 100vh;
    width: 100vw;
}

.goods_item{
    width: 50vw;
    min-height: 100px;
	border: 1px solid #eeeeee;
	position: relative;
}
.add_car{
	position: absolute;
	width: 20px;
	height: 20px;
	right: 13px;
	bottom: 29px;
}
.add_car image{
	width: 100%;
	height: 100%;
}
.goods_item_img image{
	width: calc(50vw - 4px);
	height: calc(50vw - 5px);
	display: block;
	margin-left: 0;
}
.goods_item_img_right image{
	width: calc(50vw - 3px);
	height: calc(50vw - 5px);
	display: block;
	padding-left: 2px;
}
.goods_item_name{
    line-height: 20px;
    height: 20px;
    margin-left: 10px;
    margin-top: 5px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.goods_item_title{
	font-size: 12px;
	color: #9c9c9c;
	line-height: 20px;
    height: 20px;
    margin-left: 10px;
    margin-top: 5px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.goods_item_price{
	margin-left: 10px;
	position: relative;
	height: 30px;
	line-height: 30px;
}
.goods_item_price_left {
    font-size: 12px;
    color: gray;
}

.goods_item_price_right {
	color: red;
    font-size: 16px;
    width: 100px;
    position: absolute;
    right: 10px;
    bottom: 0;
    text-align: right;
}
