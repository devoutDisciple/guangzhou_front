/* pages/shop/shop.wxss */
.shop{
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    font-size: 14px;
    color: #333;
    background: #fff;
}
.shop_content{
	height: 100vh;
    width: 100vw;
}

.goods_item{
    width: 50vw;
    min-height: 100px;
	border: 1px solid #eeeeee;
	position: relative;
}
.leave_no{
	position: absolute;
	width: calc(50vw - 4px);
	height: calc(50vw - 5px);
	top: 0;
	left: 0;
	background: gray;
	opacity: 0.5;
	z-index: 5;
}

.leave_no_text{
	position: absolute;
	z-index: 9999;
	top: calc(25vw - 20px);
	font-size: 16px;
	border: 3px solid #fff;
	left: calc(25vw - 40px);
	width: 80px;
	height: 38px;
	line-height: 38px;
	text-align: center;
	color: #fff;
	display: inline-block;
}
.add_car{
	position: absolute;
	width: 20px;
	height: 20px;
	right: 6px;
	bottom: 6px;
}
.add_car image{
	width: 100%;
	height: 100%;
}
.goods_item_img image{
	width: calc(50vw - 4px);
	height: calc(50vw - 5px);
	display: block;
	margin-left: 0;
}
.goods_item_img_right image{
	width: calc(50vw - 3px);
	height: calc(50vw - 5px);
	display: block;
	padding-left: 2px;
}
.goods_item_name{
    line-height: 20px;
    height: 20px;
    margin-left: 10px;
    margin-top: 5px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.goods_item_title{
	font-size: 12px;
	color: #9c9c9c;
	line-height: 20px;
    height: 20px;
    margin-left: 10px;
    margin-top: 5px;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.goods_item_price{
	margin-left: 10px;
	position: relative;
	height: 30px;
	line-height: 30px;
}
.goods_item_price_left {
	float: left;
	color: red;
    font-size: 16px;
}

.goods_item_price_right {
	font-size: 10px;
	color: gray;
	text-align: center;
	margin-left: 10px;
}
